<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/id_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:gravity="center">

        <ImageView
                android:id="@+id/id_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentTop="true"
                android:background="@android:color/darker_gray"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_line"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="2dp">

            <ImageButton
                    android:id="@+id/id_ib_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:src="@raw/delete"/>

            <ImageButton
                    android:id="@+id/id_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:src="@raw/details"/>

            <ImageButton
                    android:id="@+id/id_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg"
                    android:src="@raw/more"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/id_head_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

        <ImageButton
                android:id="@+id/id_next"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/button_bg"
                android:src="@raw/next"/>

        <TextView
                android:id="@+id/id_textView"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_toLeftOf="@id/id_next"
                android:layout_marginRight="14dp"
                android:gravity="center"/>

        <ImageButton
                android:id="@+id/id_previous"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:background="@drawable/button_bg"
                android:src="@raw/previous"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray"/>
    </RelativeLayout>

    <com.yanhao.picReader.widget.MyGallery
            android:id="@+id/id_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:spacing="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
    </com.yanhao.picReader.widget.MyGallery>
</RelativeLayout>